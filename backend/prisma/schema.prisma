generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model LegalFact {
  id                 String   @id
  ingestMethod       String
  eliUri             String?
  title              String
  summary            String
  date               String
  impact             String
  category           String
  legalStatus        String
  officialRationale  String
  sourceUrl          String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([date])
  @@index([ingestMethod])
  @@index([impact])
}
